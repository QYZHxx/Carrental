<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6dade"
    >
    <com.zuchexing.carrental.customlayout.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:background="@drawable/btn_color"
        >
        <TextView
            android:layout_marginRight="1dp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="湘"
            android:drawableEnd="@drawable/right"
            android:textSize="15dp"

            android:background="#FFFFFF"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="请输出车牌号"
            android:layout_weight="1"
            android:textSize="15dp"
            android:background="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:id="@+id/carregister_brandselect"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="车辆型号"
        android:textSize="15dp"
        android:background="#FFFFFF"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="请点击选择车辆型号"
        android:gravity="right|center"
        android:layout_gravity="right"
        android:background="#ffffff"
        android:textSize="15dp"
        android:layout_weight="1"
        android:drawableEnd="@drawable/right"
        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="行驶证所有人"
            android:textSize="15dp"
            android:background="#FFFFFF"
            android:gravity="center"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="请输入驾驶人名字"
            android:gravity="right|center"
            android:layout_weight="7"
            android:textSize="15dp"
            android:background="#FFFFFF"
            android:id="@+id/carregister_name"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:id="@+id/car_register_address"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="交接地点"
            android:textSize="15dp"
            android:background="#FFFFFF"
            android:gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="请选择交接车地点"
            android:gravity="right|center"
            android:layout_gravity="right"
            android:background="#ffffff"
            android:textSize="15dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/right"

            />
    </LinearLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:background="#d98824"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
</LinearLayout>
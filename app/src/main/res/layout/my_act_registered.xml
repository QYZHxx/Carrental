<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:background="#fafafa"
    android:weightSum="1">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:onClick="back"
            android:src="@drawable/my_img_back"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/table"
            android:text="注册"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="125dp"
            android:textColor="#282828" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="110dp"
            android:id="@+id/txt_register"
            android:onClick="register"
            android:textColor="#666666"
            android:clickable="true"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:weightSum="1">
        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="请输入您的手机号"
            android:background="#ffffff"
            android:inputType="phone"
            android:id="@+id/edt_phone"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:text="获取验证码"
            android:background="#d9d9d9"
            android:id="@+id/acquire"
            android:onClick="acquire"
            android:textColor="#ffffff" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入验证码"
        android:id="@+id/yz"
        android:layout_marginTop="1dp"
        android:background="#ffffff" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请设置密码"
        android:id="@+id/edt_szmi"
        android:layout_marginTop="1dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#fe4001"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:onClick="submit"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击-提交 即表示同意"
            android:id="@+id/textView7"
            android:textSize="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《租车行用户服务协议》"
            android:textColor="#fe4001"
            android:textSize="12dp"
            android:id="@+id/txt_treaty"
            android:onClick="txt_treaty"
            />
    </LinearLayout>
</LinearLayout>
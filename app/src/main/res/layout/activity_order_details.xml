<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.zuchexing.carrental.customlayout.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        ></com.zuchexing.carrental.customlayout.TitleLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="123.6dp"
        android:layout_gravity="center"
        android:id="@+id/details_car_pic"
        android:src="#123456"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="车主:"
        android:id="@+id/details_car_master"
        android:layout_marginBottom="2dp"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="车主的电话"
        android:id="@+id/details_car_masterphone"
        android:layout_marginBottom="2dp"
        android:autoLink="phone"
        android:textSize="30dp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/details_car_cartype"
            android:hint="车辆的品牌"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="租金"
            android:id="@+id/details_car_rentprice"
            android:textSize="30dp"
            />
    </LinearLayout>
</LinearLayout>
